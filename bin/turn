#!/usr/bin/env ruby
require_relative '../lib/turn'
board = [" "," "," "," "," "," "," "," "," "]
puts "Welcome to Tic Tac Toe!"
move(board, 5, "X")
a = gets.strip
if !move(board, 5, "X")
  puts "ERROR position 5 for x"
end
if !move(board, 1, "O")
  puts "ERROR position 1 for O"
end
display_board(board)
turn(board)